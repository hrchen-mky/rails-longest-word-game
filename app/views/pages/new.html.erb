<h1>New Game</h1>
<%= @letters%>
<ul class="letters">
  <%@letters.each do |letter| %>
    <li> <%= letter%></li>
  <%end%>
</ul>

<h2>What is the longest word?</h2>
<form action="/old" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="word" placeholder="longest word">
  <input type="submit">
</form>
